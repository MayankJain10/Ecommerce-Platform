package com.mayank.ecommerce.filter;

@Bean
public SecurityFilterChain securityFilterChain(HttpSecurity http) throws Exception {
    http
        .csrf().disable()
        .authorizeHttpRequests()
        .requestMatchers(
            "/api/auth/**",
            "/swagger-ui/**",
            "/v3/api-docs/**",
            "/swagger-ui.html"
        ).permitAll()
        .anyRequest().authenticated()
        .and()
        .httpBasic();

    return http.build();
}
